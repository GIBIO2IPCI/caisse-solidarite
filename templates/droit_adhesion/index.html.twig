{% extends 'base.html.twig' %}

{% block title %}Liste des adhesions{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Liste des adhésions</h1>
            </div>

            <div class="d-flex">

                <a class="btn btn-danger me-3" href="{{ path('app_adhesion_liste_pdf') }}" target="_blank">
                    <i class="fa-solid fa-download"></i>
                    Exporter la liste
                </a>

                <a class="btn btn-secondary me-3" href="{{ path('app_adherent_new') }}">
                    <i class="fa-solid fa-filter"></i>
                    Filtre
                </a>

                <a class="btn btn-primary me-3" href="{{ path('app_droit_adhesion_new') }}">
                    <i class="fa-solid fa-plus"></i>
                    Enregistrer une adhésion
                </a>

            </div>

        </div>

        <table class="table table-bordered table-striped text-center align-middle table-responsive table-sm">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénoms</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Sexe</th>
                <th>Site</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for droit_adhesion in droit_adhesions %}
                <tr>
                    <td>{{ droit_adhesion.adherent }}</td>
                    <td>{{ droit_adhesion.adherent.nom }}</td>
                    <td>{{ droit_adhesion.adherent.prenom }}</td>
                    <td>{{ droit_adhesion.adherent.email }}</td>
                    <td>{{ droit_adhesion.adherent.telephone }}</td>
                    <td>{{ droit_adhesion.adherent.sexe }}</td>
                    <td>{{ droit_adhesion.adherent.site }}</td>
                    <td>{{ droit_adhesion.adherent.statut }}</td>
                    <td>
                        <a class="btn btn-secondary me-2" href="{{ path('app_droit_adhesion_show', {'id': droit_adhesion.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                            voir plus
                        </a>
                        <a class="btn btn-warning" href="{{ path('app_droit_adhesion_edit', {'id': droit_adhesion.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                            modifier
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {# display navigation #}
        <div class="pagination">
            {{ knp_pagination_render(droit_adhesions) }}
        </div>

    </div>
{% endblock %}
