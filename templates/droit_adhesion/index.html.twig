{% extends 'base.html.twig' %}

{% block title %}Adherent index{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Adherent index</h1>
            </div>

            <div class="d-flex">
                <a class="btn btn-secondary me-3" href="{{ path('app_adherent_new') }}">
                    <i class="fa-solid fa-filter"></i>
                    Filtre
                </a>
                <a class="btn btn-primary me-3" href="{{ path('app_droit_adhesion_new') }}">
                    <i class="fa-solid fa-plus"></i>
                    create new
                </a>
            </div>

        </div>

        <table class="table table-bordered table-striped text-center align-middle table-responsive table-sm">
            <thead>
            <tr>
                <th>Adherent</th>
                <th>Montant</th>
                <th>Date_Adhesion</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for droit_adhesion in droit_adhesions %}
                <tr>
                    <td>{{ droit_adhesion.adherent }}</td>
                    <td>{{ droit_adhesion.montant }}</td>
                    <td>{{ droit_adhesion.dateAdhesion ? droit_adhesion.dateAdhesion|date('Y-m-d') : '' }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_droit_adhesion_show', {'id': droit_adhesion.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                            show
                        </a>
                        <a class="btn btn-warning" href="{{ path('app_droit_adhesion_edit', {'id': droit_adhesion.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_droit_adhesion_new') }}">
            <i class="fa-solid fa-plus"></i>
            Create new
        </a>
    </div>
{% endblock %}
