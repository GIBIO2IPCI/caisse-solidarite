{% extends 'base.html.twig' %}

{% block title %}Adherent{% endblock %}

{% block body %}
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Droit Adhesion</h1>
            </div>

            <div class="d-flex">
                <a class="btn btn-info me-3" href="{{ path('app_droit_adhesion_index') }}">
                    <i class="fa-solid fa-rotate-left"></i>
                    back to list
                </a>
                <a class="btn btn-warning me-3" href="{{ path('app_droit_adhesion_edit', {'id': droit_adhesion.id}) }}">
                    <i class="fa-solid fa-edit"></i>
                    edit
                </a>
                {{ include('droit_adhesion/_delete_form.html.twig') }}
            </div>

        </div>

        <div class="">
            <table class="table table-striped table-bordered">
                <tbody>
                <tr>
                    <th>Adherent</th>
                    <td>{{ droit_adhesion.adherent }}</td>
                </tr>
                <tr>
                    <th>Montant</th>
                    <td>{{ droit_adhesion.montant }}</td>
                </tr>
                <tr>
                    <th>Date_inscription</th>
                    <td>{{ droit_adhesion.dateAdhesion ? droit_adhesion.dateAdhesion|date('Y-m-d') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6"></div>
        </div>

    </div>
{% endblock %}
