{% extends 'base.html.twig' %}

{% block title %}Adherent index{% endblock %}

{% block body %}
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Adherent index</h1>
            </div>

            <div class="d-flex">
                <button type="button" class="btn btn-secondary me-3"  data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    <i class="fa-solid fa-filter"></i>
                    Filtre
                </button>
                <a class="btn btn-primary me-3" href="{{ path('app_adherent_new') }}">
                    <i class="fa-solid fa-plus"></i>
                    create new
                </a>
            </div>

        </div>

        <table class="table table-bordered table-striped text-center table-sm table-responsive align-middle">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Date_inscription</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for adherent in adherents %}
                <tr>
                    <td>{{ adherent.identifiant }}</td>
                    <td>{{ adherent.nom }}</td>
                    <td>{{ adherent.prenom }}</td>
                    <td>{{ adherent.email }}</td>
                    <td>{{ adherent.telephone }}</td>
                    <td>{{ adherent.dateInscription ? adherent.dateInscription|date('Y-m-d') : '' }}</td>
                    <td>{{ adherent.birthday ? adherent.birthday|date('Y-m-d') : '' }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_adherent_show', {'id': adherent.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                            show
                        </a>
                        <a class="btn btn-warning text" href="{{ path('app_adherent_edit', {'id': adherent.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_adherent_new') }}">
            <i class="fas fa-plus"></i>
            Create new
        </a>
    </div>
{% endblock %}
