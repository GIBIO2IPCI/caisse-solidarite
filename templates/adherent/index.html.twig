{% extends 'base.html.twig' %}

{% block title %}Adherent index{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Adherent index</h1>
            </div>

            <div class="d-flex">
                <a class="btn btn-primary me-3" href="{{ path('app_adherent_new') }}">create new</a>
            </div>

        </div>

        <table class="table table-bordered table-striped text-center">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Date_inscription</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for adherent in adherents %}
                <tr>
                    <td>{{ adherent.identifiant }}</td>
                    <td>{{ adherent.nom }}</td>
                    <td>{{ adherent.prenom }}</td>
                    <td>{{ adherent.email }}</td>
                    <td>{{ adherent.telephone }}</td>
                    <td>{{ adherent.dateInscription ? adherent.dateInscription|date('Y-m-d') : '' }}</td>
                    <td>{{ adherent.birthday ? adherent.birthday|date('Y-m-d') : '' }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_adherent_show', {'id': adherent.id}) }}">show</a>
                        <a class="btn btn-warning" href="{{ path('app_adherent_edit', {'id': adherent.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('app_adherent_new') }}">Create new</a>
    </div>
{% endblock %}
