{% extends 'base.html.twig' %}

{% block title %}Cotisation{% endblock %}

{% block body %}
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">

            <div class="">
                <h1 class="mb-4">Adherent</h1>
            </div>

            <div class="d-flex">
                <a class="btn btn-info me-3" href="{{ path('app_assistance_index') }}">
                    <i class="fa-solid fa-arrow-left"></i>
                    back to list
                </a>
                <a class="btn btn-warning me-3" href="{{ path('app_assistance_edit', {'id': cotisation.id}) }}">
                    <i class="fa-solid fa-edit"></i>
                    edit
                </a>
                {{ include('cotisation/_delete_form.html.twig') }}
            </div>

        </div>

        <div class="">
            <table class="table table-striped table-bordered table-responsive table-sm align-middle">
                <tbody>
                <tr>
                    <th>Adhérent</th>
                    <td>{{ assistance.adherent }}</td>
                </tr>
                <tr>
                    <th>Evenement</th>
                    <td>{{ assistance.evenement }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ assistance.dateAssistance ? assistance.dateAssistance|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6"></div>
        </div>

    </div>

    <div class="container-fluid">
        <table class="table table-bordered table-striped text-center table-responsive table-sm align-middle">
            <thead>
            <tr>
                <th>Adhérent</th>
                <th>Evenement</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for assistance in assistance.adherent.assistance %}
                <tr>
                    <td>{{ assistance.adherent.identifiant }}</td>
                    <td>{{ assistance.evenement }}</td>
                    <td>{{ assistance.dateAssistance ? assistance.dateAssistance|date('Y-m-d') : '' }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_assistance_show', {'id': assistance.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                            show
                        </a>
                        <a class="btn btn-warning" href="{{ path('app_assistance_edit', {'id': assistance.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}