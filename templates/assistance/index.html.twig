{% extends 'base.html.twig' %}

{% block title %}Liste des assistances{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="d-flex justify-content-between align-items-center table-responsive table-sm">

            <div class="">
                <h1 class="mb-4">Liste des assistances</h1>
            </div>

            <div class="d-flex">

                <a class="btn btn-danger me-3" href="{{ path('app_assistance_liste_pdf') }}" target="_blank">
                    <i class="fa-solid fa-download"></i>
                    Exporter la liste
                </a>

                <a class="btn btn-secondary me-3" href="{{ path('app_assistance_index') }}">
                    <i class="fa-solid fa-filter"></i>
                    Filtre
                </a>

                <a class="btn btn-primary me-3" href="{{ path('app_assistance_new') }}">
                    <i class="fa-solid fa-plus"></i>
                    Assister un adhérent
                </a>

            </div>

        </div>

        <table class="table table-bordered table-striped text-center table-responsive table-sm align-middle">
            <thead>
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Prénoms</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Évènement</th>
                <th>Assisté le</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for assistance in assistances %}
                <tr>
                    <td>{{ assistance.adherent}}</td>
                    <td>{{ assistance.adherent.nom }}</td>
                    <td>{{ assistance.adherent.prenom }}</td>
                    <td>{{ assistance.adherent.email }}</td>
                    <td>{{ assistance.adherent.telephone }}</td>
                    <td>{{ assistance.evenement }}</td>
                    <td>{{ assistance.dateAssistance|format_datetime('full', 'short', locale='fr') }}</td>
                    <td>
                        <a class="btn btn-secondary me-2" href="{{ path('app_assistance_show', {'id': assistance.id}) }}">
                            <i class="fa-solid fa-eye"></i>
                            Voir plus
                        </a>
                        <a class="btn btn-warning" href="{{ path('app_assistance_edit', {'id': assistance.id}) }}">
                            <i class="fa-solid fa-edit"></i>
                            Modifier
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="pagination">
            {{ knp_pagination_render(assistances) }}
        </div>

    </div>

{% endblock %}